<% if @comment.errors.present? %>
	<ul>
		<% @comment.errors.full_messages.each do |message| %>
		<li>
			<%= message%>
		</li>
		<% end %>
	</ul>
	<% end %>

<%= form_for @comment do |f| %>
<table>
	<tr>
		<td>Message</td>
		<td>:</td>
		<td><%= f.text_field :message %></td>
	</tr>

	<tr>
		<td colspan='3'><%= f.submit %>
	</tr>

</table>
<% end %>