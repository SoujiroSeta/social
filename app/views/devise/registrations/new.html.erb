<h2 class='title'>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class='divbox'>
  <div>
    <%= f.text_field :username, placeholder: 'Username', style: 'width:218px' %>
  </div>
  <div>
    <%= f.text_field :first_name, placeholder: 'First Name', style: 'width:100px' %>
    <%= f.text_field :last_name, placeholder: 'Last Name', style: 'width:100px' %>
  </div>
  <div>
    <%= f.email_field :email, placeholder: 'Email', style: 'width:218px' %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: 'Password', style: 'width:218px' %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, 
    placeholder: 'Password Confirmation', style: 'width:218px' %>
  </div>
  
  <div style='margin-top: 10px;'> 
  <div><%= f.label :My_Avatar %>
    <%= image_tag resource.image_url, style: 'height:70px; width: 70px; float:left; margin-right: 10px;' %> <!-- mengambil gambar dari resource user -->
  </div>
      <%= f.file_field :image %><br>
      <%= f.radio_button :gender_id, Gender.male.id %> Male 
      <%= f.radio_button :gender_id, Gender.female.id %> Female
  </div><br><br>
  <div>
    <%= f.submit "Sign Up Now", class: 'btn btn-primary', style: 'width: 225px;' %>
    <br>
    <%= link_to 'Sign In', new_user_session_path, style: 'text-decoration: none; width: 200px;', class: 'btn' %>
  </div>
  <div style='clear:both;'></div>
</div>
<% end %>



