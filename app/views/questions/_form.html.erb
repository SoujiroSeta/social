<% if @question.errors.present? %>
	<ul>
		<% @question.errors.full_messages.each do |message| %>
		<li>
			<%= message%>
		</li>
		<% end %>
	</ul>
	<% end %>

<%= form_for @question do |f| %>
<table>
	<tr>
		<td>Title</td>
		<td>:</td>
		<td><%= f.text_field :title %></td>
	</tr>

	<tr>
		<td>Message</td>
		<td>:</td>
		<td><%= f.text_area :message %></td>
	</tr>

	<tr>
		<td colspan='3'><%= f.submit %>
	</tr>

</table>
<% end %>