<% if @question.errors.present? %>
	<ul>
		<% @question.errors.full_messages.each do |message| %>
		<li>
			<%= message%>
		</li>
		<% end %>
	</ul>
	<% end %>

<%= form_for @question do |f| %>
<table>
	<tr>
		<td>Title</td>
		<td>:</td>
		<td><%= f.text_field :title, style:'width:400px;' %></td>
	</tr>

	<tr>
		<td>Message</td>
		<td>:</td>
		<td><%= f.text_area :message, style: 'width:500px; height:200px;' %></td>
	</tr>
	<tr>
		<td>Tag</td>
		<td>:</td>
		<td><%= f.text_field :tag_list %>
	</tr>

	<tr>
		<td></td>
		<td></td>
		<td><%= f.submit %>
	</tr>

</table>
<% end %>