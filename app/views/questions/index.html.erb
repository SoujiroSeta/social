<div class='row-fluid'>
	<div class='span-8'>
		<h1><button type="button" class= 'btn btn-primary btn-lg'>List All Question</button></h1>
		<ul>
			<% @questions.each do |question| %>
			<li>
				<%= link_to question.title, question_path(question) %>	<br>
				<%= link_to 'Edit', edit_question_path(question), class: 'btn btn-primary' %> |
				<%= link_to 'Delete', question_path(question), method: :delete, class: 'btn btn-danger' %>
			</li>			
			<% end %>
		</ul>
		<br/>
		<%= link_to 'New Question', new_question_path %>
	</div>
</div>
